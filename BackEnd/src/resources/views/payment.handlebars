<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng tin mới</title>
    <link rel="stylesheet" href="/css/payment.css">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.16/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!-- Google Map -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons+Outlined" rel="stylesheet">
    
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    
</head>
<body>
<div class ="container">
    <form action ="">
        <div class ="row">
            <div class ="column">
                <h3 class="title">Thanh toán tin</h3>
                <span>Chọn loại tin: </span>
                <select id="select" class ="select">
                    <option>Chọn loại tin</option>
                    <option>Tin Thường</option>
                    <option>Tin VIP</option>
                </select>
                <select id ="select2" class ="select2">
                    <option>Chọn thời gian</option>
                    <option>Đăng theo ngày</option>
                    <option>Đăng theo tuần</option>
                </select>
                <select id ="select3" class ="select3">
                    <option>5 ngày</option>
                    <option>6 ngày</option>
                    <option>7 ngày</option>
                    <option>8 ngày</option>
                    <option>9 ngày</option>
                    <option>9 ngày</option>
                </select>
                <select id="select4" class ="select4">
                    <option>1 tuần</option>
                    <option>2 tuần</option>
                    <option>3 tuần</option>
                    <option>4 tuần</option>
                </select>
                <div class ="input-box">
                    <span>Email :</span>
                    <input type="email"
                    placeholder="duc123456456456@gmail.com">
                </div>
                <div class ="input-box">
                    <span>Address :</spa>
                    <input type="text"
                    placeholder="Thu Duc">
                </div>
                <div class ="input-box">
                    <span>City :</span>
                    <input type="text"
                    placeholder="HCM">
                </div>
                <div class="flex">
                    <div class ="input-box">
                        <span>State :</spa>
                        <input type="text"
                        placeholder="VietNam">
                    </div>
                    <div class ="input-box">
                        <span>Zipcode :</span>
                        <input type="number"
                        placeholder="123456">
                    </div>
                </div>
            </div>
        </div>
        <button type="submit" class="btn">Thanh toán
        </button>
    </form>
</div>
<script>
var select = document.getElementById('select');
var select2 = document.getElementById('select2');
var select3 = document.getElementById('select3');
var select4 = document.getElementById('select4');

function updateSelectVisibility() {
    // If "Chọn loại tin" or "Chọn thời gian" is selected
    if (select.value === 'Chọn loại tin' || select2.value === 'Chọn thời gian') {
        select3.style.display = 'none';
        select4.style.display = 'none';
    }
    // If "Đăng theo ngày" is selected
    else if (select2.value === 'Đăng theo ngày') {
        select3.style.display = 'block'; // Show select3
        select4.style.display = 'none';  // Hide select4
    }
    // If "Đăng theo tuần" is selected
    else if (select2.value === 'Đăng theo tuần') {
        select3.style.display = 'none';
        select4.style.display = 'block';
    }
}

updateSelectVisibility();

select.addEventListener('change', updateSelectVisibility);
select2.addEventListener('change', updateSelectVisibility);
</script>
