<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ThueTro88.com - Kênh thuê trọ uy tín hàng đầu Việt Nam</title>
    <link rel="stylesheet" href="/css/admin.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0"/>
</head>

<body>
    <div class="container">
        <!-- Main Content -->
        <main>
            <h1>Số liệu thống kê</h1>
            <!-- Analyses -->
            <div class="analyse">
                {{#each statsData}}
                <div class="sales">
                    <div class="status">
                        <div class="info">
                            <h3>Tổng doanh thu</h3>
                            <h1>{{profits}}</h1>
                        </div>
                        <div class="progresss">
                            <svg>
                                <circle cx="38" cy="38" r="36"></circle>
                            </svg>
                            <div class="percentage">
                                <p>+81%</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="visits">
                    <div class="status">
                        <div class="info">
                            <h3>Lượt truy cập</h3>
                            <h1>{{accesses}}</h1>
                        </div>
                        <div class="progresss">
                            <svg>
                                <circle cx="38" cy="38" r="36"></circle>
                            </svg>
                            <div class="percentage">
                                <p>-48%</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="searches">
                    <div class="status">
                        <div class="info">
                            <h3>Lượt tìm kiếm</h3>
                            <h1>{{searchs}}</h1>
                        </div>
                        <div class="progresss">
                            <svg>
                                <circle cx="38" cy="38" r="36"></circle>
                            </svg>
                            <div class="percentage">
                                <p>+21%</p>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
            <!-- End of Analyses -->

            <!-- Read users info from database-->
            <div class="new-users">
                <h2>Người dùng mới</h2>
                <div class="user-list">
                {{#each userData}}
                    <div class="user">
                        <img src={{this.avatar}}>
                        <h2>{{this.name}}</h2>
                    </div>
                {{/each}}
                </div>
            </div>

        </main>
    </div>
</body>

</html>